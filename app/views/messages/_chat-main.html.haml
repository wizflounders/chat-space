-# チャットメイン画面
.chat-main
 .chat-header
  .chat-header__group
   .chat-header__group__name
    = @group.name
   .chat-header__group--edit-btn
    = link_to "edit", edit_group_path(@group)
  .chat-header__group-member
   MEMBER:
   - @group.users.each do |user|
    = user.name

 .chat-body
  - @messages.each do |message|
   .chat-body__message-box
    .chat-body__message-box__name
     = message.user.name
    .chat-body__message-box__date
     = message.user.created_at.strftime("%Y/%m/%d/ %H:%M:%S")
    .chat-body__message-box__body
     = message.body

 .chat-footer
  = form_for @message do |f|
   .chat-footer__form
    =f.text_field :body, placeholder: "Type a message"
    %a.icon.fa.fa-image{"href":"#"}
   .chat-footer--submit
    = f.hidden_field :group_id, :value => @group.id
    = f.submit "Sent"
